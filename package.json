{
  "name": "nestjs-prisma-graphql-scaffold",
  "version": "0.1.1",
  "description": "A scaffold repo based on nestjs with prisma and graphql integration",
  "author": "cooperw991",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "latest",
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/graphql": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/swagger": "latest",
    "@nestjs/terminus": "latest",
    "@prisma/client": "3.13.0",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "dataloader": "^2.1.0",
    "dayjs": "^1.11.1",
    "graphql": "^16.4.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "nest-winston": "^1.6.2",
    "nestjs-i18n": "^9.0.12",
    "nestjs-prisma": "^0.15.1",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "ramda": "^0.28.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "latest",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^4.15.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma": "3.13.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@Helper/(.*)$": "<rootDir>/../src/common/helpers/$1",
      "^@Util/(.*)$": "<rootDir>/../src/common/utils/$1",
      "^@Decorator/(.*)$": "<rootDir>/../src/common/decorators/$1",
      "^@Dto/(.*)$": "<rootDir>/../src/common/dto/$1",
      "^@Middleware/(.*)$": "<rootDir>/../src/common/middlewares/$1",
      "^@Interface/(.*)$": "<rootDir>/../src/common/interfaces/$1",
      "^@Guard/(.*)$": "<rootDir>/../src/common/guards/$1",
      "^@Filter/(.*)$": "<rootDir>/../src/common/filters/$1",
      "^@Model/(.*)$": "<rootDir>/../src/models/$1",
      "^@Module/(.*)$": "<rootDir>/../src/modules/$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts}": "eslint --fix",
    "*": "prettier -w -u ."
  }
}
